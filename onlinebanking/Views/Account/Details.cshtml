@model onlinebanking.Models.Account

@{
    ViewBag.Title = "Details";
}

      

        



        <div class="account-container">
            <ul class="welcome-list">
                <li class="welcome-list-item"> @Html.ActionLink("Account", "Details", "Account", new { id = @Session["customerid"] }, new { @class = "welcome-links" })</li>
                <li class="welcome-list-item"> @Html.ActionLink("Customer Details", "Details", "Customer", new { id = @Session["customerid"] }, new { @class = "welcome-links" })</li>
                <li class="welcome-list-item"> @Html.ActionLink("Change Password", "Welcome", "Login", new { id = @Session["customerid"] }, new { @class = "welcome-links" })</li>

            </ul>

            <div class="account-table">
                <div>
                    <h2 class="welcome-header">
                        Welcome @Session["Name"]
                        @Html.ActionLink("Log Out", "Logout", "Login", null, new { @class = "btn btn-primary", @style = "float:right;" })
                    </h2>
                    <h2>Account Details</h2>
                </div>
                <table>
                    <tr>
                        <td>Savings Account</td>
                        <td></td>
                        <td>Total Available Balance</td>
                        <td>Rs. @Model.balance</td>

                    </tr>
                    <tr>
                        <td>
                            Account No:
                        </td>
                        <td>
                            IFSC CODE:
                        </td>
                        <td>
                            Name:
                        </td>
                        <td>
                            Balance
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Model.account_no
                        </td>
                        <td>
                            @Model.branch_id
                        </td>
                        <td>
                            @Session["Name"]
                        </td>
                        <td>
                            Rs .@Model.balance
                        </td>
                    </tr>

                </table>
                <div class="account-links">
                    @Html.ActionLink("Send Money", "Index", "Transactions", null, new { @class = "btn btn-primary", @style = "margin:1rem 0 1rem 1rem" })
                    @Html.ActionLink("Statement", "Statement", "Transactions", null, new { @class = "btn btn-primary", @style = "margin:1rem 0 1rem 1rem" })
                  
                </div>
            </div>


        </div>
   
