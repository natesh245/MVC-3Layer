@model onlinebanking.Models.LoginClass

@{
    ViewBag.Title = "Index";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-container">
        <h4>User Login</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "error-text" })
        <div>
            @Html.LabelFor(model => model.email_id, htmlAttributes: new { @class = "text-label" })

            @Html.EditorFor(model => model.email_id, new { htmlAttributes = new { @class = "text-box-login" } })
            @Html.ValidationMessageFor(model => model.email_id, "", new { @class = "error-text" })

        </div>

        <div>
            @Html.LabelFor(model => model.user_password, htmlAttributes: new { @class = "text-label" })

            @Html.EditorFor(model => model.user_password, new { htmlAttributes = new { @class = "text-box-login" } })
            @Html.ValidationMessageFor(model => model.user_password, "", new { @class = "error-text" })

        </div>

        <div class="btn-container">
            <div>

                <input type="submit" value="Login" class="btn btn-primary" />

            </div>
            <div>
                @Html.ActionLink("Forgot Password", "Index", "Login", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <h1 class="error-text">@Html.ViewData["Message"]</h1>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
