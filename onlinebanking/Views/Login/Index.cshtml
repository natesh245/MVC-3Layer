@model BussinessLayer.Models.LoginModel

@{
    ViewBag.Title = "Index";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
   <div class="container-img">
    <div class="form-container form-color">
        <h4>User Login</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "error-text" })
        <div>
            @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "text-label" })

            @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "text-box-login" } })
            @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "error-text" })

        </div>

        <div>
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "text-label" })

            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "text-box-login" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "error-text" })

        </div>

        <div class="btn-container">
            <div>

                <input type="submit" value="Login" class="btn btn-primary" />

            </div>
            <div>
                @Html.ActionLink("Forgot Password", "Index", "Login", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <h1 class="error-text">@Html.ViewData["Message"]</h1>
    </div></div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
